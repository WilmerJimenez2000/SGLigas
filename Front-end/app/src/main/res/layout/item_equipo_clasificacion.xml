<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="412dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_numero_equipo"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1" />

            <ImageView
                android:id="@+id/imageView_equipo_clasificacion"
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_user_black" />

            <TextView
                android:id="@+id/textView_nombre_equipo_clasificacion"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="Nombre"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_clasificacion_PG"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PG"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView_clasificacion_PE"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PE"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView_clasificacion_GF"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GF"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView_clasificacion_GC"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GC"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView_clasificacion_DG"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DG"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView_clasificacion_Pts"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pts"
                android:textColor="#000000"
                android:textSize="13sp" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#EDEDED"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>