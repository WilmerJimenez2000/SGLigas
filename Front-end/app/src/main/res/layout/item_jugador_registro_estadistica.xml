<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="8dp"

        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_numero"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView_nombreJ"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_TA"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TA"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_TR"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TR"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_gol"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GOL"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_agol"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AGOL"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imageView_eliminarJ_estadistica"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/x" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>